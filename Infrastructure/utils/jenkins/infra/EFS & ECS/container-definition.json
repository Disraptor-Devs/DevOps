[
    {
        "name": "jenkins",
        "image": "143671530412.dkr.ecr.af-south-1.amazonaws.com/disraptor-jenkins:latest",
        "memory": 4096,
        "cpu": 2048,
        "essential": true,

        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "/ecs/disraptor-jenkins",
                "awslogs-region": "af-south-1",
                "awslogs-stream-prefix": "disraptor-jenkins"
            }
        },
        "mountPoints": [
            {
                "sourceVolume": "Jenkins",
                "containerPath": "/efs/jenkins",
                "readOnly": false
            }
        ],
        "environment": [
            {
                "name": "JENKINS_HOME",
                "value": "/efs/jenkins"
            }

        ],
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80
            },
            {
                "containerPort": 443,
                "hostPort": 443
            },
            {
                "containerPort": 22,
                "hostPort": 22
            },
            {
                "containerPort": 8080,
                "hostPort": 8080,
                "name" : "jenkins-access"
            }

        ]
    }
]